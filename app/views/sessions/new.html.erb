<h3 class="text-center"> Sign In to Alpha Blog </h3>
<div class="container h-100 ">
  <div class="row h-100 justify-content-center align-items-center ">
    <div class ='card py-5 col-md-6 bg-light'>
     <%= form_for(:session, :html =>{class: "form-horizontal "}) do |f| %>
     <div class="row">
          <div class="col-form-label col-sm-1 offset-1 ">       
            <%= f.label :email,'Email: ' %>
          </div>
          <div class="col-sm-8 offset-1">
            <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
          </div>
     </div>
     <div class="row">
          <div class="col-form-label col-sm-1 offset-1 ">
            <%= f.label :password,'Password: ' %>
          </div>
          <div class="col-sm-8 offset-1">
            <%= f.password_field :password, class: "form-control", placeholder: "password", autofocus: false %>
          </div>
     </div>
     <div class="row">
          <div class="offset-3 col-sm-10 ">
            <%= f.submit "Log In", class: 'btn btn-primary btn-md ' %>
          </div>  
     </div>
     <div class="col-xs-4 offset-4 py-4">
            [
            <%= link_to "Cancel request and return to articles listing", articles_path %>
            ]
      </div>
    <% end %>
    </div>   
  </div>
</div>