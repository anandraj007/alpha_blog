<%= render 'shared/errors',obj:@user %>
<div class="container">
  <div class='row'>
    <div class='col-lg-12'>
      <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>

        <div class="row">
          <div class="col-form-label col-sm-1 offset-1 ">
            <%= f.label :username, 'Username: ' %>
          </div>
          <div class="col-sm-8 offset-1 ">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
          </div>
        </div>
        <div class="row">
          <div class="col-form-label col-sm-1 offset-1">
            <%= f.label :email,  'Email: ' %>
          </div>
          <div class="col-sm-8 offset-1">
            <%= f.email_field :email,  class: "form-control", placeholder: "Enter email" %>
          </div>
        </div>
        <div class="row">
          <div class="col-form-label col-sm-1 offset-1">
            <%= f.label :password,  'Password: '%>  
          </div>
          <div class="col-sm-8 offset-1">
            <%= f.password_field :password,  class: "form-control", placeholder: "Enter password" %>
          </div>
        </div>
        <div class="row">
          <div class="offset-3 col-sm-10">
            <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: 'btn btn-primary btn-md') %>
          </div>
          <div class="col-xs-4 offset-4 py-2">
            [
            <%= link_to "Cancel request and return to articles listing", articles_path %>
            ]
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
