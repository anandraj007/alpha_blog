<h1 class="text-center py-2">All Alpha Bloggers </h1>
<ul class="pagination justify-content-center my-4"><%= will_paginate %></ul>   
<div class="text-center ">
 <% @users.each do |user|%>
    <ul class='list-unstyled'>
      <div class = row>
        <div class='card card-body col-md-4 offset-4 col-sm-12 bg-light'>
          <li><%= link_to gravatar_for(user),user_path(user) %></li>
          <li class='py-1 article-title'><%= link_to user.username,user_path(user) %></li> 
          <li><small><%= pluralize(user.articles.count,'article') if user.articles %></small></li>
          <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user",user_path(user),method: :delete,
           data: { confirm: 'Are you sure want to delete this user and their articles' } 
            %></li>   
          <% end %>
        </div>
      </div>  
    </ul>
 <% end %>
</div>
<ul class="pagination justify-content-center my-4"><%= will_paginate %></ul>
